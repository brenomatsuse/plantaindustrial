#:kivy 1.11.1

<MainWidget>:
    orientation:'vertical'
    canvas:
        Color:
            rgb:0.5,0.5,0.5
        Rectangle:
            size:self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,0.1)
        spacing:10
        Label:
            text:'Planta Industrial'
            size_hint_x: None
            width: 300
            
        BoxLayout:
            orientation:'vertical'
            size_hint_x: None
            width:400
            Label:
                text:'Acesso aos componentes'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:'Motor'
                    on_release:root._motorPopup.open()
                Button:
                    text:'Solenoide'
                    on_release:root._solenoidePopup.open()
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Image:
            source:'imgs/planta.jpg'
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        width:800
        Button:
            text:'Gráficos'
            on_release:root._graphPopup.open()
        Button:
            text:'Configurações'
        Button:
            text:'Dados Históricos'
            on_release:root._hgraphPopup.open()

        
                   