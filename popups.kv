#:kivy 1.11.1

<GraphPopup>:
    title:'Escolha qual gráfico deseja acessar'
    size_hint_y:None
    size_hint_x:None
    height:500
    width:700
    BoxLayout:
        orientation:'vertical'
        size_hint:(1,1)
        Button:           
            text:"Dados históricos da tensao"
            font_size:12
        Button:
            text:"Dados históricos da frequência do motor"
            font_size:12
        Button:          
            text:"Dados históricos da temperatura do estator"
            font_size:12
        Button:
            text:"Dados históricos da rotaçao do motor"
            font_size:12
        Button:
            text:"Dados históricos da potência de entrada"
            font_size:12
        Button:
            text:"Dados históricos da corrente"
            font_size:12
        Button:
            text:"Dados históricos da vazao de entrada"
            font_size:12
        Button:
            text:"Dados históricos do nivel do reservatorio"
            font_size:12
        Button:
            font_size:12
            text:"Fechar"
            on_release:
                root.dismiss()

    
