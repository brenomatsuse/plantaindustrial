<MotorPopup>:
    title:'Escolha a operação que deseja realizar no motor'
    size_hint_y:None
    size_hint_x:None
    height:500
    width:700
    BoxLayout:
        orientation:'vertical'
        size_hint:(1,1)
        Button:
            text:"Ligar motor"
            font_size:12
        Button:
            text:"Alterar frequência do motor"
            font_size:12
            on_release:root._freqPopup.open()
        Button:
            text:"Habilitar partida automática do motor"
            font_size:12
        Button:
            text:"Desligar motor"
            font_size:12
        Button:
            font_size:12
            text:"Fechar"
            on_release:
                root.dismiss()


<SolenoidePopup>:
    title:"Ligação do solenoide"
    size_hint_y:None
    size_hint_x:0.4
    height:150
    BoxLayout:
        orientation:'horizontal'
        Button:
            size_hint_y:None
            height:80
            text:"Ligar"
        Button:
            size_hint_y:None
            height:80
            text:"Desligar"
        Button:
            size_hint_y:None
            height:80
            text:"Fechar"
            on_release:
                root.dismiss()
<FreqPopup>:
    title:"Altere a frequência do motor"
    size_hint_y:None
    size_hint_x:0.4
    height:150
    BoxLayout:
        id:layout
        orientation:'vertical'
        GridLayout: 
            cols:2
            rows:1
            Label:
                text:"Frequência [Hz]"
                font_size:14
            TextInput:
                id:txt_st
                font_size:14
                haling:'center'
                valing:'middle'